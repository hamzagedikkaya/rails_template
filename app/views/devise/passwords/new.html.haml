.container.d-flex.justify-content-center.align-items-center.min-vh-100
  .card.shadow-lg{style: "width: 30rem; border-radius: 15px;"}
    .card-body.p-5
      %h2.text-center.mb-4 Forgot your password?

      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = render "devise/shared/error_messages", resource: resource

        .field.mb-4
          = f.input :email, autofocus: true, autocomplete: "email", label: "Email", input_html: { class: 'form-control' }

        .actions.text-center.mt-3
          = f.submit "Send me reset password instructions", class: 'btn btn-primary w-100'

      .text-center.mt-4
        = render "devise/shared/links"
