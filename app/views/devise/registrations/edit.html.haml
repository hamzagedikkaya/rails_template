.container.d-flex.justify-content-center.align-items-center.min-vh-100
  .card.shadow-lg{style: "width: 40rem; border-radius: 15px;"}
    .card-body.p-4
      %h2.text-center.mb-4 Edit #{resource_name.to_s.humanize}

      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource

        .row.mb-4
          .col
            = f.input :email, autofocus: true, autocomplete: "email", label: "Email", input_html: { class: 'form-control form-control-lg' }
          .col
            = f.input :current_password, label: "Current Password", input_html: { class: 'form-control form-control-lg' }

        .row.mb-4
          .col
            = f.input :password, label: "New Password", input_html: { class: 'form-control form-control-lg' }
            - if @minimum_password_length
              %em{style: "display: block;"} #{@minimum_password_length} characters minimum
          .col
            = f.input :password_confirmation, label: "Confirm Password", input_html: { class: 'form-control form-control-lg' }

        .actions.text-center
          .d-flex.justify-content-between
            = f.submit "Update", class: 'btn btn-primary w-100 me-2'
            = link_to "Back", :back, class: 'btn btn-secondary w-100'

      .text-center.mt-4
        %h3 Cancel my account
        = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger mt-2'
