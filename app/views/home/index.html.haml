%h1.text-danger Welcome to Home Page

.container.text-center
  - if user_signed_in?
    %div
      = link_to "Edit Profile", edit_user_registration_path, class: "btn btn-outline-primary mx-2"
      = button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger mx-2"
  - else
    %div
      = link_to "Sign Up", new_user_registration_path, class: "btn btn-success mx-2"
      = link_to "Sign In", new_user_session_path, class: "btn btn-primary mx-2"
